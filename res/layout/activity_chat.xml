<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/main_activity_root_view"
    android:background="@color/background_light_gray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/backImg"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="matrix"
        android:adjustViewBounds="true"
        android:contentDescription="Back Button" />
    <androidx.appcompat.widget.Toolbar
        android:id="@id/topToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:contentInsetEnd="0.0dip"
        app:contentInsetStart="0.0dip">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@id/backButton"
                android:background="?android:actionBarItemBackground"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_arrow_back_white"
                app:tint="?colorOnSurface" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/topToolbarClick"
                android:background="@drawable/button"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip">
                    <ImageView
                        android:id="@id/topToolbarImg"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/default_avatar_round"
                        android:contentDescription="Image Profile" />
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.vanniktech.emoji.EmojiTextView
                        android:textSize="14.0sp"
                        android:textStyle="bold"
                        android:textColor="?colorOnSurface"
                        android:ellipsize="end"
                        android:id="@id/topToolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="25"
                        android:paddingStart="5.0dip" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="?colorOnSurface"
                        android:ellipsize="marquee"
                        android:id="@id/topToolbarSubTitle"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120.0dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingStart="5.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@id/chat_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topToolbar">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/list"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottom_write_bar"
            android:layout_alignParentTop="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/bottom_write_bar"
            android:background="@drawable/bg_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:minHeight="48.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4.0dip"
            android:layout_marginEnd="4.0dip">
            <ImageButton
                android:layout_gravity="start|center"
                android:id="@id/emoji_btn"
                android:background="?android:actionBarItemBackground"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:scaleType="fitCenter"
                android:contentDescription="Emoji Button"
                android:layout_marginStart="7.0dip"
                app:srcCompat="@drawable/ic_mood_white"
                app:tint="@color/grey2" />
            <com.random.chat.app.util.view.CutCopyPasteEmojiEditText
                android:layout_gravity="center_horizontal"
                android:id="@id/txtMsg"
                android:background="@color/transparent"
                android:padding="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48.0dip"
                android:hint="@string/input_send_placeholder"
                android:maxLength="1000"
                android:layout_weight="1.0"
                android:inputType="textMultiLine"
                android:layout_marginStart="2.0dip"
                android:backgroundTint="@color/transparent"
                app:emojiSize="24.0sp" />
            <com.random.chat.app.ui.chat.audio.FrameLayoutFixed
                android:id="@id/record_panel"
                android:padding="3.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="48.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/slideText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30.0dip">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.0dip"
                        android:contentDescription="Cancel Record Audio Button"
                        app:srcCompat="@drawable/ic_arrow_back_ios_white"
                        app:tint="#ff999999" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="#ff999999"
                        android:layout_gravity="center_vertical"
                        android:id="@id/slideToCancelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6.0dip" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4.0dip">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:contentDescription="Start Record Audio Button"
                        app:srcCompat="@drawable/ic_circle"
                        app:tint="@color/record" />
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@color/recordAudioTextColor"
                        android:layout_gravity="center_vertical"
                        android:id="@id/recording_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:layout_marginStart="6.0dip" />
                </LinearLayout>
            </com.random.chat.app.ui.chat.audio.FrameLayoutFixed>
            <ImageButton
                android:layout_gravity="end|center"
                android:id="@id/input_cam"
                android:background="?android:actionBarItemBackground"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:scaleType="fitCenter"
                android:contentDescription="Send Image Camera"
                android:layout_marginEnd="18.0dip"
                app:srcCompat="@drawable/ic_camera_alt_black"
                app:tint="@color/grey2" />
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@id/btnAudioSend"
                android:background="@drawable/button_background"
                android:layout_width="42.0dip"
                android:layout_height="42.0dip"
                android:contentDescription="Record Audio"
                android:layout_marginEnd="3.0dip"
                app:srcCompat="@drawable/ic_mic_white"
                app:tint="@color/white" />
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@id/btnSend"
                android:background="@drawable/button_background"
                android:visibility="gone"
                android:layout_width="42.0dip"
                android:layout_height="42.0dip"
                android:contentDescription="Send Message"
                android:layout_marginEnd="3.0dip"
                app:srcCompat="@drawable/ic_send_white"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>