<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/statelist_item_background"
    android:paddingBottom="1.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/bubble"
        android:background="@drawable/balloon_incoming_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:longClickable="true"
        android:layout_width="265.0dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10.0dip">
            <ImageButton
                android:layout_gravity="start|center"
                android:id="@id/imageButtonPlay"
                android:background="?android:actionBarItemBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_play_circle_outline_white"
                app:tint="@color/gray" />
            <ImageButton
                android:layout_gravity="start|center"
                android:id="@id/imageButtonRetry"
                android:background="?android:actionBarItemBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:longClickable="false"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_file_download"
                app:tint="@color/gray" />
            <ProgressBar
                android:theme="@style/AppTheme.WhiteAccent"
                android:layout_gravity="start|center"
                android:id="@id/progressBarDownload"
                android:visibility="gone"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                style="?android:progressBarStyle" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@id/seekBarPlay"
                    android:paddingTop="6.0dip"
                    android:paddingBottom="2.0dip"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/AudioSeekBar" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip">
                    <TextView
                        android:layout_gravity="start"
                        android:id="@id/textViewSeconds"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="00:08"
                        android:layout_weight="1.0"
                        android:paddingStart="15.0dip" />
                    <TextView
                        android:textColor="@color/gray"
                        android:layout_gravity="end|bottom|center"
                        android:id="@id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:38 AM"
                        android:paddingEnd="5.0dip"
                        style="@style/chat_timings" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>