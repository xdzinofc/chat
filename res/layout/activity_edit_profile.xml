<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@color/background_light_gray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@id/blockedLayout"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginBottom="15.0dip"
                    app:cardBackgroundColor="@color/card_edit_profile"
                    app:cardElevation="2.0dip"
                    app:contentPadding="8.0dip">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/crimson"
                            android:gravity="center_horizontal"
                            android:id="@id/textViewBlocked"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/blocked_until"
                            android:textAlignment="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@id/pendingLayout"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginBottom="15.0dip"
                    app:contentPadding="8.0dip">
                    <LinearLayout
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="openDialogWaiting">
                        <TextView
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:id="@id/textViewPending"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pending"
                            android:textAlignment="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
            <com.random.chat.app.ui.profile.profileimages.ProfileImages
                android:id="@id/profileImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.card.MaterialCardView
                android:id="@id/card_viewApelido"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="25.0dip"
                android:layout_marginRight="8.0dip"
                app:cardBackgroundColor="@color/card_edit_profile"
                app:cardElevation="2.0dip"
                app:contentPaddingBottom="10.0dip"
                app:contentPaddingLeft="8.0dip"
                app:contentPaddingRight="8.0dip"
                app:contentPaddingTop="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/title_color"
                        android:gravity="center_horizontal"
                        android:id="@id/textViewProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_profile_detail"
                        android:textAllCaps="true"
                        android:textAlignment="center" />
                    <TableLayout
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="?android:dividerHorizontal"
                        android:stretchColumns="1"
                        android:showDividers="middle">
                        <TableRow
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogNick">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageApelido"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_person_outline_black"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/lbViewApelido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nick"
                                android:layout_marginStart="5.0dip" />
                            <com.vanniktech.emoji.EmojiTextView
                                android:id="@id/textViewApelido"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/anonymous"
                                android:textAlignment="textEnd"
                                android:layout_marginEnd="16.0dip" />
                        </TableRow>
                        <TableRow
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogGender">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageViewGender"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_wc_black"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/lbViewGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5.0dip"
                                android:text="@string/gender" />
                            <LinearLayout
                                android:layout_gravity="end">
                                <ImageView
                                    android:id="@id/imageSexo"
                                    android:layout_width="20.0dip"
                                    android:layout_height="20.0dip"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="16.0dip"
                                    app:srcCompat="@drawable/ic_man"
                                    app:tint="@color/drawer_text_color" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogMyAge">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageViewAge"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_date_range"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/lbViewAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_age"
                                android:layout_marginStart="5.0dip" />
                            <TextView
                                android:gravity="end|center"
                                android:id="@id/textViewAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                android:layout_marginEnd="16.0dip" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@id/card_viewSearching"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="100.0dip"
                app:cardBackgroundColor="@color/card_edit_profile"
                app:cardElevation="2.0dip"
                app:contentPaddingBottom="10.0dip"
                app:contentPaddingLeft="8.0dip"
                app:contentPaddingRight="8.0dip"
                app:contentPaddingTop="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/title_color"
                        android:gravity="center_horizontal"
                        android:id="@id/textView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/looking_for"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textAlignment="center" />
                    <TableLayout
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="?android:dividerHorizontal"
                        android:stretchColumns="1"
                        android:showDividers="middle">
                        <TableRow
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogGenderSearch">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageView4"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_wc_black"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gender"
                                android:layout_marginStart="5.0dip" />
                            <LinearLayout
                                android:layout_gravity="end"
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:id="@id/imageSearchFemale"
                                    android:layout_width="20.0dip"
                                    android:layout_height="20.0dip"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="16.0dip"
                                    app:srcCompat="@drawable/ic_woman"
                                    app:tint="@color/drawer_text_color" />
                                <ImageView
                                    android:id="@id/imageSearchMale"
                                    android:layout_width="20.0dip"
                                    android:layout_height="20.0dip"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="16.0dip"
                                    app:srcCompat="@drawable/ic_man"
                                    app:tint="@color/drawer_text_color" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogAgeSearch">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageView3"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_date_range"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age_range"
                                android:layout_marginStart="5.0dip" />
                            <TextView
                                android:gravity="end|center"
                                android:id="@id/textViewAgeRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18 - 35"
                                android:layout_marginEnd="16.0dip" />
                        </TableRow>
                        <TableRow
                            android:id="@id/rowLanguage"
                            android:background="@drawable/button"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="openDialogLanguage">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@id/imageLanguage"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="16.0dip"
                                app:srcCompat="@drawable/ic_language_white"
                                app:tint="@color/drawer_text_color" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/lbViewLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/language"
                                android:layout_marginStart="5.0dip" />
                            <TextView
                                android:gravity="end|center"
                                android:id="@id/textViewLanguage"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:layout_marginEnd="16.0dip" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="bottom|center|right"
        android:id="@id/fab_save_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24.0dip"
        android:layout_marginBottom="24.0dip"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_done"
        app:tint="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>