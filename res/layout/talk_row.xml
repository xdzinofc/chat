<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/layout"
    android:background="?colorSurface"
    android:padding="10.0dip"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="52.0dip"
        android:layout_height="52.0dip">
        <ImageView
            android:id="@id/imgProfile"
            android:layout_width="52.0dip"
            android:layout_height="52.0dip"
            android:src="@drawable/default_avatar_round"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:id="@id/talkFavorite"
            android:visibility="gone"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_favorite_white"
                app:tint="#fff44336" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/talkSelected"
            android:background="@drawable/circle_selected"
            android:padding="3.0dip"
            android:visibility="gone"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="14.0dip"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_done"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12.0dip"
        android:layout_marginStart="12.0dip">
        <com.vanniktech.emoji.EmojiTextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:ellipsize="end"
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anonymous"
            android:layout_toLeftOf="@id/time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/time"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:gravity="center"
                android:id="@id/imgSend"
                android:visibility="gone"
                android:layout_width="16.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_done_all" />
            <ImageView
                android:gravity="center"
                android:id="@id/imgTypeContent"
                android:visibility="gone"
                android:layout_width="16.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:scaleType="fitCenter"
                android:layout_marginEnd="4.0dip"
                app:srcCompat="@drawable/ic_mic_white"
                app:tint="@color/chatListColor" />
            <com.vanniktech.emoji.EmojiTextView
                android:textSize="14.0sp"
                android:textColor="@color/chatListColor"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@id/subTitle"
                android:paddingRight="30.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/chatListColor"
            android:id="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/newMsg"
            android:background="@drawable/circle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@id/blockChatImg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_block_white"
            app:tint="@color/grey2" />
    </RelativeLayout>
</LinearLayout>