<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?selectableItemBackground"
    android:paddingTop="@dimen/emoji_search_spacing"
    android:paddingBottom="@dimen/emoji_search_spacing"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.vanniktech.emoji.EmojiTextView
        android:id="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:layout_marginStart="@dimen/emoji_search_spacing" />
    <TextView
        android:id="@id/shortCodes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="@dimen/emoji_search_spacing" />
</LinearLayout>